{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false,
    "moduleResolution": "node",
    "types": ["screeps", "node"]
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["*.ts", "../../src/types.d.ts", "../../src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
